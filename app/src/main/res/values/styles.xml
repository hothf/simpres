<resources>

    <style name="AppBarStyle.Simpres" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/colorBackgroundPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CardStyle.Simpres" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/colorBackgroundSecondary</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:textColorHighlight">@color/colorTextDefault</item>
        <item name="cardCornerRadius">@dimen/default_corner_radius</item>
        <item name="cardElevation">@dimen/default_4</item>
    </style>

    <style name="ButtonStyle.Simpres" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_default_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorButtonTextDefault</item>
        <item name="android:elevation">@dimen/default_8</item>
    </style>

    <style name="ButtonStyle.Simpres.Alternative" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_alternative_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorButtonTextAlternative</item>
        <item name="android:elevation">@dimen/default_8</item>
    </style>

    <style name="ButtonStyle.Simpres.Borderless" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_transculent_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Text Styles -->

    <style name="TextStyle.Simpres.Default" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="TextStyle.Simpres.Default.Large" parent="TextStyle.Simpres.Default">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextStyle.Simpres.Default.Bold" parent="TextStyle.Simpres.Default">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Simpres.Default.Small" parent="TextStyle.Simpres.Default">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextStyle.Simpres.Default.Small.Caps" parent="TextStyle.Simpres.Default.Small">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.Simpres.Nav" parent="TextStyle.Simpres.Default">
        <item name="android:textSize">@dimen/font_nav</item>
        <item name="android:textColor">@color/colorTextNav</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Simpres.Secondary" parent="TextStyle.Simpres.Default">
        <item name="android:textColor">@color/colorTextSecondaryDefault</item>
    </style>

    <style name="TextStyle.Simpres.Secondary.Bold" parent="TextStyle.Simpres.Secondary">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextStyle.Simpres.Secondary.Small" parent="TextStyle.Simpres.Secondary">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextStyle.Simpres.Secondary.Large" parent="TextStyle.Simpres.Secondary">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextStyle.Simpres.Secondary.Bold.Large" parent="TextStyle.Simpres.Secondary.Bold">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

</resources>
