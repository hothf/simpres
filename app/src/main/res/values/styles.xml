<resources>

    <style name="FABStyle.Simpres" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorBackgroundSecondary</item>
    </style>

    <style name="TextInputStyle.Simpres" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/default_16</item>
        <item name="boxCornerRadiusBottomStart">@dimen/default_16</item>
        <item name="boxCornerRadiusTopEnd">@dimen/default_16</item>
        <item name="boxCornerRadiusTopStart">@dimen/default_16</item>
    </style>

    <style name="AppBarStyle.Simpres" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/colorBackgroundPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CardStyle.Simpres" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorBackgroundSecondary</item>
        <item name="android:textColor">@color/colorTextDefault</item>
        <item name="android:textColorHighlight">@color/colorTextDefault</item>
        <item name="cardCornerRadius">@dimen/default_corner_radius</item>
        <item name="cardElevation">@dimen/default_4</item>
        <item name="android:theme">@style/Theme.Simpres</item>
        <item name="shapeAppearance">@style/cardShape</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="cardShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">@dimen/default_16</item>
    </style>

    <style name="ButtonStyle.Simpres.Nav" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/colorIconTintDefault</item>
        <item name="iconTint">@color/colorIconTintDefault</item>
        <item name="cornerRadius">@dimen/default_108</item>
    </style>

    <style name="ButtonStyle.Simpres.Bordered" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/default_2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorTextSecondaryDefault</item>
    </style>

    <!-- Text Styles -->

    <style name="TextStyle.Simpres.Default" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="TextStyle.Simpres.Default.Large" parent="TextStyle.Simpres.Default">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextStyle.Simpres.Default.Bold" parent="TextStyle.Simpres.Default">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Simpres.Default.Small" parent="TextStyle.Simpres.Default">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextStyle.Simpres.Default.Small.Caps" parent="TextStyle.Simpres.Default.Small">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.Simpres.Nav" parent="TextStyle.Simpres.Default">
        <item name="android:textSize">@dimen/font_nav</item>
        <item name="android:textColor">@color/colorTextNav</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Simpres.Secondary" parent="TextStyle.Simpres.Default">
        <item name="android:textColor">@color/colorTextSecondaryDefault</item>
    </style>

    <style name="TextStyle.Simpres.Secondary.Bold" parent="TextStyle.Simpres.Secondary">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Simpres.Secondary.Small" parent="TextStyle.Simpres.Secondary">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextStyle.Simpres.Secondary.Large" parent="TextStyle.Simpres.Secondary">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextStyle.Simpres.Secondary.Bold.Large" parent="TextStyle.Simpres.Secondary.Bold">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

</resources>
