<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.simpres.ui.subjects.detail.idealist.IdeaItemViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/item"
        style="@style/CardStyle.Simpres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_8"
        android:layout_marginEnd="@dimen/default_8"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/default_corner_radius"
        app:cardElevation="@dimen/default_4"
        tools:cardBackgroundColor="@color/defaultBackgroundPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sumText"
                android:text="@{viewModel.sum}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toEndOf="@+id/sumText"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:padding="@dimen/default_4"
                android:layout_toStartOf="@+id/check"
                android:layout_height="wrap_content"
                android:text="@{viewModel.title}"
                tools:text="grgrgrgefw" />

            <CheckBox
                android:padding="@dimen/default_4"
                android:checked="@{viewModel.done}"
                android:id="@+id/check"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>
