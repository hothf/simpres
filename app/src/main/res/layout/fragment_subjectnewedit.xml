<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.simpres.ui.subjects.subjectlist.newedit.NewEditSubjectViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundPrimary"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/default_48"
                    android:layout_height="@dimen/default_48"
                    android:layout_marginStart="@dimen/default_12"
                    android:layout_marginTop="@dimen/default_12"
                    android:background="@drawable/round_button_transparent_selector"
                    android:onClick="@{() -> viewModel.onBack()}"
                    android:src="@drawable/ic_launcher_foreground"
                    android:tint="@color/colorIconTintDefault" />

                <TextView
                    android:id="@+id/transitionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_8"
                    android:layout_marginEnd="@dimen/default_8"
                    android:layout_marginTop="@dimen/default_18"
                    android:layout_toEndOf="@+id/back"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="3"
                    android:text="@{viewModel.title}"
                    tools:text="Title" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                style="@style/CardStyle.Simpres"
                android:layout_marginTop="@dimen/default_12"
                android:layout_marginStart="@dimen/default_16"
                android:layout_marginEnd="@dimen/default_16"
                android:layout_marginBottom="@dimen/default_16"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/titleEditContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_16"
                android:hint="Title edit"
                app:setError="@{viewModel.titleError}">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/suggInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{viewModel.title}"
                    app:addTextChangedListener="@{viewModel.getTextChangedListener}"
                    app:setOnEditorActionListener="@{viewModel.getDoneListener}"
                    app:setSelection="@{viewModel.titleSelection}" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/dateSetterButton"
                style="@style/ButtonStyle.Simpres.Alternative"
                android:layout_below="@+id/titleEditContainer"
                android:layout_margin="@dimen/default_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{(v) -> viewModel.onOpenDatePicker(v)}"
                android:text="@{viewModel.date}"
                tools:text="Date setting" />

            <Button
                android:layout_below="@+id/dateSetterButton"
                style="@style/ButtonStyle.Simpres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/default_24"
                android:onClick="@{(v)->viewModel.submit(v)}"
                android:text="Save" />
            </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
