<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.simpres.ui.subjects.detail.idealist.newedit.NewEditIdeaViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/default_48"
                    android:layout_height="@dimen/default_48"
                    android:layout_marginStart="@dimen/default_8"
                    android:layout_marginTop="@dimen/default_8"
                    android:background="@drawable/round_button_transparent_selector"
                    android:onClick="@{() -> viewModel.onBack()}"
                    android:src="@drawable/ic_launcher_foreground"
                    android:tint="@color/colorIconTintDefault" />

                <TextView
                    android:id="@+id/transitionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_8"
                    android:layout_toEndOf="@+id/back"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="3"
                    android:minHeight="@dimen/actionBarSize"
                    android:text="@{viewModel.title}"
                    tools:text="Title" />
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setError="@{viewModel.titleError}"
                android:hint="Title edit">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/suggInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{viewModel.title}"
                    app:addTextChangedListener="@{viewModel.getTextChangedListener}"
                    app:setOnEditorActionListener="@{viewModel.getDoneListener}"
                    app:setSelection="@{viewModel.titleSelection}" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:onClick="@{(v)->viewModel.submit(v)}"
                android:layout_width="wrap_content"
                android:text="ok"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
