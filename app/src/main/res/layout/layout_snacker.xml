<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/snacker"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/snackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/default_12"
            android:paddingTop="@dimen/default_12"
            android:textSize="@dimen/font_default"
            android:paddingEnd="@dimen/default_12"
            android:paddingBottom="@dimen/default_12"
            android:text=""
            tools:text="This is a really nice snacker. " />

        <TextView
            android:id="@+id/snackAction"
            android:textColor="@color/colorIndicatorOrange"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/snackText"
            android:textSize="@dimen/font_default"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingStart="@dimen/default_12"
            android:paddingTop="@dimen/default_12"
            android:paddingEnd="@dimen/default_12"
            tools:visibility="visible"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/default_12"
            tools:text="Snack Action " />

    </RelativeLayout>

</RelativeLayout>