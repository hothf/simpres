<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.simpres.ui.subjects.subjectlist.SubjectItemViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="@dimen/default_42"
            android:layout_height="@dimen/default_42"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_delete"
            android:tint="@color/colorAccent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/item"
            style="@style/CardStyle.Simpres"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <RelativeLayout
                android:id="@+id/contentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title"
                    style="@style/TextStyle.Simpres.Default.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_16"
                    android:layout_marginTop="@dimen/default_16"
                    android:layout_marginEnd="@dimen/default_16"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="@{viewModel.title}"
                    android:textStyle="bold"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/date"
                    style="@style/TextStyle.Simpres.Secondary.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginStart="@dimen/default_16"
                    android:layout_marginEnd="@dimen/default_16"
                    android:text="@{viewModel.date}"
                    tools:text="Date" />

                <TextView
                    android:id="@+id/sum"

                    style="@style/TextStyle.Simpres.Secondary.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/doneAmountText"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/default_16"
                    android:layout_marginEnd="@dimen/default_16"
                    android:layout_marginBottom="@dimen/default_2"
                    android:gravity="end"
                    android:text="@{viewModel.sum}"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="20 â‚¬" />

                <TextView
                    android:id="@+id/doneAmountText"
                    style="@style/TextStyle.Simpres.Secondary.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/subjectHeader"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/default_16"
                    android:gravity="end"
                    android:includeFontPadding="false"
                    android:text="@{viewModel.doneAmount}"
                    android:textStyle="bold"
                    tools:text="1 of 2" />

                <View
                    android:id="@+id/subjectHeader"
                    android:layout_width="@dimen/default_48"
                    android:layout_height="@dimen/default_48"
                    android:layout_below="@+id/date"
                    android:layout_marginStart="@dimen/default_16"
                    android:layout_marginTop="@dimen/default_24"
                    android:layout_marginBottom="@dimen/default_16"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@{viewModel.color}" />


                <TextView
                    style="@style/TextStyle.Simpres.Default.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/subjectHeader"
                    android:layout_alignTop="@+id/subjectHeader"
                    android:layout_alignEnd="@+id/subjectHeader"
                    android:layout_alignBottom="@+id/subjectHeader"
                    android:gravity="center"
                    android:text="@{viewModel.shortTitle}"
                    android:textColor="@color/colorBackgroundSecondary"
                    tools:text="F" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>
