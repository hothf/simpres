<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.ka.simpres.ui.subjects.subjectlist.SubjectItemViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/item"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_8"
        android:layout_marginEnd="@dimen/default_8"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/default_corner_radius"
        app:cardElevation="@dimen/default_4"
        tools:cardBackgroundColor="@color/defaultBackgroundPrimary">R

        <RelativeLayout
            android:id="@+id/gg"
            android:layout_margin="@dimen/default_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/swipeHandle"

                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.title}"
                tools:text="Title" />

            <TextView
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:text="@{viewModel.sum}"
                tools:text="Sum" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sum"
                android:text="@{viewModel.date}"
                tools:text="Date" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>
